@{
    Layout = null;
    ViewData["Title"] = "Criar conta";
}

<link rel="stylesheet" href="~/css/login.css">

<section>
    <h1>Crie sua conta!</h1>
    <form>
        <input required type="text" id="username" placeholder="Username" />
        <input required type="email" id="email" placeholder="E-mail" />
        <input required type="password" id="password" placeholder="Senha" />
        <input required type="password" id="confirmPassword" placeholder="Confirmação de senha" />
        <div class="error">
            <span hidden>Senhas diferentes</span> 
        </div>
        <button>Criar</button>
    </form>
</section>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/signUp.js"></script>